<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="Player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/Player"
                android:layout_marginTop="101dp"
                android:layout_marginBottom="96dp" android:textSize="36sp" android:layout_gravity="center"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/paa" android:id="@+id/cpu"
                android:layout_gravity="center"/>
        <TextView
                android:text="勝敗"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/result"
                android:layout_marginLeft="26dp" android:layout_marginTop="79dp" android:layout_marginStart="26dp"
                android:textSize="36sp" android:layout_gravity="center"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="グー"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/gooButton"
                    android:layout_marginTop="26dp" android:layout_weight="1" android:textSize="24sp"/>
            <Button
                    android:text="パー"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/paaButton"
                    android:layout_marginTop="27dp" android:layout_weight="1" android:textSize="24sp"/>
            <Button
                    android:text="チョキ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/chokiButton"
                    android:layout_marginTop="26dp" android:layout_weight="1" android:textSize="24sp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>